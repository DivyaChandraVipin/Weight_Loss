<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGreen"
        android:title="Calorie Calculator"
        android:titleTextColor="@color/colorWhite"
        android:foregroundTint="@color/colorWhite"
        android:subtitleTextColor="@color/colorWhite"
        android:titleTextAppearance="@anim/up_bottom"
        android:id="@+id/toolbar"></android.support.v7.widget.Toolbar>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many calories I need a day?"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:id="@+id/txtViewContent"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_marginLeft="56dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Gender"
            android:textSize="20dp"

            android:textColor="@color/colorBlack"
            android:id="@+id/textViewGender"/>
        <Spinner
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:id="@+id/spnGender"

            android:textAlignment="center"
            android:background="@drawable/button"
            >
        </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textSize="20dp"
                android:layout_marginLeft="55dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/textViewWeight"
                />
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextWeight"
                android:hint="@string/e_weight"
                android:textAlignment="center"
                android:textColorHint="@color/colorWhite"
                android:background="@drawable/button"
                android:layout_marginLeft="70dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age:"
                android:textSize="20dp"
                android:layout_marginLeft="60dp"
                android:textColor="@color/colorBlack"
                android:id="@+id/textViewAge"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextAge"
                android:hint= "Age"
                android:textAlignment="center"
                android:layout_marginLeft="100dp"
                android:textColorHint="@color/colorWhite"
                android:background="@drawable/button"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/height"
                android:textSize="20dp"
                android:layout_marginLeft="60dp"
                android:id="@+id/textViewHeight"
                android:textColor="@color/colorBlack"/>
            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/editTextHeight"
                android:hint="@string/e_height"
                android:textAlignment="center"
                android:layout_marginLeft="70dp"
                android:textColorHint="@color/colorWhite"
                android:background="@drawable/button"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnCount"
            android:text="@string/Calculate"
            android:layout_marginLeft="120dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button"/>
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnClear"
            android:text="@string/Clear"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewResult"
        android:text="@string/Result"
        android:textSize="30sp"
        android:layout_marginLeft="60dp"
        android:textColor="@color/colorBlack"
        />

        </LinearLayout>
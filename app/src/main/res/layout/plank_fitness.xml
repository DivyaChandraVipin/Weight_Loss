<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plank Crawl"
        android:id="@+id/txtViewHead"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgPlank"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewPlankCrawl"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="\n1. Place wrists under shoulders and knees under hips.
\n2. Maintaining a flat back, lift knees 2 inches off the ground. Hold this position, hovering off the floor. "/>
</LinearLayout>
</ScrollView>
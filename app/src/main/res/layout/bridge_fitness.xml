<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="10dp"
        android:text="Bridge"
        android:id="@+id/txtViewHead"/>
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imgBridge"/>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewBridge"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:text="\n1.Lie on your back with your knees bent and your feet flat on the floor.
\n2.Raise your hips of the floor so that your body forms a straight line from your shoulders to your knees.
\n3.Pause at the top then slowly lower your body back to the floor.
 "/>
</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:textSize="30dp"
            android:text="Potato"
android:id="@+id/txtViewHead"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorBlack"/>
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
android:src="@drawable/boiledpotato"
            android:scaleType="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/potato"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
android:id="@+id/txtViewContent"
            android:text="Plain potatoes, whether white or sweet, are fat-free, rich in nutrients, and low in calories.They make a good addition to any weight-loss diet.A 3.3-ounce baked white potato, which is about a 1/2-cup serving, has 94 calories, 21 grams of carbs, 2 grams of protein and 2 grams of fiber.It's also a good source of vitamin C, potassium, folate and vitamin B-6, meeting more than 10 percent of the daily value per serving"
            android:textColor="@color/colorBlack"/>





    </LinearLayout>

</ScrollView>
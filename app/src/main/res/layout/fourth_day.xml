<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Day 4"
        android:id="@+id/txtViewHead"
        android:textSize="20dp"

        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/dayfour"
        android:scaleType="centerCrop"
        android:layout_marginTop="15dp"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/txtViewFourth"
        android:text="Day 4 Diet Plan Chart:
         \nBreakfast at 8.30 AM:with 2 bananas, and a glass of milk.
            \nMid-Morning Snack at 10.30 AM : You can take banana shake prepared with 1 glass of milk and 1banana.
            \nLunch at 12.00 Noon : Prepare 1 bowl of vegetable soup with carrots cabbage, and onions.
            \nAfternoon Snack at 4.00 PM : Again take a banana shake prepared with a glass of milk and 1banana.
            \nDinner at 8.00 PM : Take 1 glass of milk and 2 bananas.
            \nDrink about 8 to 10 glasses of water in the whole day.
"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        />




</LinearLayout>
    </ScrollView>
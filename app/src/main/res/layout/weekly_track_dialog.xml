<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/green_back">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter weight:"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/txtViewWeight"/>
        <EditText
            android:layout_width="150dp"
            android:layout_marginLeft="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextWeightWeekly"
            android:hint="IN KG"
            android:textAlignment="center"
            android:background="@drawable/button"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter waist size:"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:id="@+id/txtViewWaist"/>
        <EditText

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextWaistWeekly"
            android:hint="IN CM"
android:textAlignment="center"
            android:background="@drawable/button"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter hip size:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:id="@+id/txtViewHip"/>

        <EditText

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextHipWeekly"
            android:hint="IN CM"
            android:background="@drawable/button"
            android:textAlignment="center"
            android:layout_marginLeft="50dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter chest size:"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textSize="20dp"

            android:id="@+id/txtViewChest"/>
        <EditText

            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/editTextChestWeekly"
            android:hint="IN CM"
            android:textAlignment="center"
            android:background="@drawable/button"
            android:layout_marginLeft="30dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtViewDate"
            android:text="Date"
            android:textSize="20dp"

            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint=""
            android:id="@+id/editTextWeeklyDate"
            android:background="@color/colorWhite"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Date"
        android:id="@+id/btnCalDate"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"

            android:layout_marginLeft="120dp"
            android:id="@+id/btnCSave"
            android:background="@drawable/button"
            android:textColor="@color/colorWhite"
            />
    </LinearLayout>

</LinearLayout>
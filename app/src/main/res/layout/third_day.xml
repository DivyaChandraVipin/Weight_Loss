<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_back">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Day 3"

        android:textSize="20dp"
        android:id="@+id/txtViewHead"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/daythree"
        android:layout_marginTop="15dp"
        android:scaleType="centerCrop"/>
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/txtViewThird"
        android:text="\nDay 3 Diet Plan Chart:
                        \nBreakfast at 8.30 AM: Take 1 apple or 1 bowl of cantaloupe
                        and 2 glasses of water.
                        \nMid-Morning Snack at 10.30 AM : Take 1 cup of sliced
                         pineapples, 1 pear, and 2 glasses of water.
                         \nLunch at 12.00 Noon: Take 1 bowl of mixed onions, cucumber, lettuce, carrots with 2 glasses of water.
                         \nAfternoon Snack at 4.00 PM:Take 1/2 grapefruit or 1 orange and a glass of water.
                          \nEvening Snack at 6.30 PM :Take only 1 guava or 1 pear."
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        />




</LinearLayout>
    </ScrollView>